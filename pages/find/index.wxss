/* pages/find/index.wxss */
.container {
  background: #FAFAFA;
}

.m-header .icon-addr {
  display: block;
  width: 24rpx;
  height: 30rpx;
}

.m-header .arrow {
  width: 16rpx;
  height: 8rpx;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #999999;
}

.page-body {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 80rpx;
}


.city-box {
  position: relative;
  padding: 40rpx 60rpx 10rpx 30rpx;
  width: 750rpx;
  background: #FFFFFF;
}

.city-box .hot-city {
  padding: 0 0 10rpx 30rpx;
}

.city-box .hot-city .item {
  margin: 20rpx 30rpx 0 0;
  width: 190rpx;
  height: 65rpx;
  background: #F5F6F7;
  border-radius: 33rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 65rpx;
  text-align: center;
}

.city-box .hot-city .item:nth-of-type(3n) {
  margin: 20rpx 0 0;
}

.city-box .scroll-city {
  height: 700rpx;
}

.city-box .scroll-city .zimu {
  padding-top: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
}

.city-box .scroll-city .city {
  padding: 30rpx 0;
  border-bottom: 1px solid #EEEEEE;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
}

.city-box .fixed-zimu {
  position: absolute;
  right: 10rpx;
  top: 40rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #555555;
  line-height: 34rpx;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: #000000;
  opacity: 0.69;
  z-index: 95;
}

.swiper {
  width: 690rpx;
  height: 330rpx;
}

.swiper image {
  display: block;
  width: 690rpx;
  height: 330rpx;
}

.wx-swiper-dot {
  width: 8rpx !important;
  height: 8rpx !important;
}

.wx-swiper-dot-active {
  width: 26rpx !important;
  height: 8rpx !important;
  border-radius: 4rpx !important;
}

.find {
  margin: 30rpx 0 0;
  padding: 0 30rpx 10rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
}

.find .nav {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #EB443D;
  line-height: 37rpx;
}

.find .nav::after {
  border-color: #EB443D;
}

.find .head {
  position: relative;
  margin: 0 20rpx 0 0;
  width: 92rpx;
  height: 92rpx;
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}

.find .img-head {
  display: block;
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
}

.find .icon-gender {
  position: absolute;
  right: 0;
  bottom: 0;
  display: block;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.find .label {
  margin: 0 20rpx 20rpx 0;
  padding: 0 20rpx;
  height: 54rpx;
  background: rgba(18, 17, 24, 0.1);
  border-radius: 27rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  line-height: 54rpx;
}

.img-wrap .img {
  margin: 0 30rpx 30rpx 0;
  display: block;
  width: 190rpx;
  height: 190rpx;
  border-radius: 30rpx;
}

.img-wrap .img:nth-of-type(3n) {
  margin: 0 0 30rpx;
}
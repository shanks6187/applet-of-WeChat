/* pages/partner/index.wxss */
.container {
  background: #FAFAFA;
}

.m-header {
  background: #FAFAFA;
}

.m-header .message {
  position: relative;
  padding-left: 30rpx;
}

.m-header .message.active::after {
  position: absolute;
  right: -15rpx;
  top: 0;
  content: '';
  width: 15rpx;
  height: 15rpx;
  background: #FF1065;
  border-radius: 50%;
}

.m-header .message .icon-message {
  display: block;
  width: 35rpx;
  height: 44rpx;
}


.m-header .select-row {
  padding: 30rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: #333333;
  line-height: 36rpx;
}

.m-header .select-row .icon-addr {
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.m-header .arrow {
  width: 16rpx;
  height: 8rpx;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #999999;
}

.m-header .icon-gender {
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.g-card {
  margin-bottom: 30rpx;
}

.g-card .label {
  margin-left: 10rpx;
  width: 118rpx;
  height: 44rpx;
  background: #E6E7EA;
  border-radius: 33rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
  text-align: center;
}

.m-button {
  position: fixed;
  right: 30rpx;
  bottom: 268rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 90;
}

.m-button .icon-kefu {
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}


.page-body {
  position: relative;
  z-index: 90;
  padding-left: 30rpx;
  padding-bottom: 30rpx;
  padding-right: 30rpx;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: #000000;
  opacity: 0.69;
  z-index: 95;
}

.week-box {
  position: relative;
  padding: 20rpx 60rpx 10rpx 30rpx;
  width: 750rpx;
  background: #FFFFFF;
}

.week-box  .week {
  padding: 30rpx 0;
  border-bottom: 1px solid #EEEEEE;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
}

.city-box {
  position: relative;
  padding: 40rpx 60rpx 10rpx 30rpx;
  width: 750rpx;
  background: #FFFFFF;
}

.city-box .hot-city {
  padding: 0 0 10rpx 30rpx;
}

.city-box .hot-city .item {
  margin: 20rpx 30rpx 0 0;
  width: 190rpx;
  height: 65rpx;
  background: #F5F6F7;
  border-radius: 33rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 65rpx;
  text-align: center;
}

.city-box .hot-city .item:nth-of-type(3n) {
  margin: 20rpx 0 0;
}

.city-box .scroll-city {
  height: 700rpx;
}

.city-box .scroll-city .zimu {
  padding-top: 30rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
}

.city-box .scroll-city .city {
  padding: 30rpx 0;
  border-bottom: 1px solid #EEEEEE;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 34rpx;
}

.city-box .fixed-zimu {
  position: absolute;
  right: 10rpx;
  top: 40rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #555555;
  line-height: 34rpx;
}

.gender-box {
  padding: 50rpx 60rpx;
  background-color: #fff;
}

.gender-box .gender {
  width: 190rpx;
  height: 65rpx;
  background: #F5F6F7;
  border-radius: 33rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 65rpx;
}

.gender-box .gender image {
  margin-right: 20rpx;
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.gender-box .gender.active {
  background: #EB7D4C;
  color: #FFFFFF;
}

.activity-card {
  border-bottom: 1px solid #eee;
}

.activity-card, .activity-footer{
  font-family: PingFangSC-Medium, PingFang SC;
}

.activity-card .body{
  width: 55%;
  font-family: PingFangSC-Medium, PingFang SC;
}

.activity-card .icon-logo{
  border-radius: 50%;
}



.activity-card .img-container{
  width: 43%;
  background: #d8d8d8;
  height: 240rpx;
}
.activity-card .img-container image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.activity-card .img-container .status{
  position: absolute;
  top: 0;
  left: 0;
  font-size: 15rpx;
  color: #fff;
  background: #F4714C;
  width: 74rpx;
  height: 26rpx;
  border-radius: 10rpx 0 10rpx 0;
}

.activity-card .img-container .status21{
  color: #fff;
  background: #F4714C;
}
.activity-card .img-container .status22{
  color: #fff;
  background: #979797;
}
.activity-card .img-container .status23{
  color: #121118;
  background: #5BD3CB;
}
.activity-card .img-container .status24{
  color: #fff;
  background: #979797;
}

.activity-card .title{
  font-size:  30rpx;
  font-weight: bold;
  line-height: 36rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-card .time{
  line-height: 26rpx;
  font-size:  24rpx;
  color: #979797;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.activity-card .address{
  flex:1;
  line-height: 30rpx;
  font-size:  24rpx;
  color: #979797;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-card .organizat{
  font-size:  24rpx;
  color: #979797;
  line-height: 26rpx;
}

.activity-card .source{
  font-size:  15rpx;
  color: #FF7336;
  border: 1px solid #FF7336;
  padding: 3rpx 5rpx 
}

.activity-card .icon-addr {
  display: block;
  width: 26rpx;
  height: 26rpx;
}

.activity-card .icon-time {
  display: block;
  width: 26rpx;
  height: 26rpx;
}

.activity-footer .people {
  width: 45%;
}

.activity-footer .people .people-img-container {
  width: 100rpx;
  height: 24rpx;
}

.activity-footer .people .img{
  width: 26rpx;
  height: 26rpx;
  display: block;
  border-radius: 50%;
}

.activity-footer .people .icon-people {
  display: block;
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  /* box-shadow: 5rpx 5rpx 8rpx #979797; */
  box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}

.activity-footer .people .icon-people1 {
  top: 0rpx;
  left: 0rpx;
}

.activity-footer .people .icon-people2 {
  top: 0rpx;
  left: 16rpx;
}

.activity-footer .people .icon-people3 {
  top: 0rpx;
  left: 32rpx;
}

.activity-footer .people .icon-people4 {
  top: 0rpx;
  left: 48rpx;
}

.activity-footer .people .icon-people5 {
  top: 0rpx;
  left: 62rpx;
}

.activity-footer .apply {
  width: 45%;
}
.activity-footer .people-count {
  color: #979797;
  font-size: 20rpx;
}

.activity-footer .apply .button {
  width: 190rpx;
  height: 70rpx;
  background-color: #f4714c;
  color: #fff;
  font-size: 30rpx;
  font-weight:100;
}

.activity-footer .apply .button2 {
  width: 190rpx;
  height: 70rpx;
  background-color: #999;
  color: #fff;
  font-size: 30rpx;
  font-weight:100;
}

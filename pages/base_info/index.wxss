/* pages/base_info/index.wxss */
.container {
  padding: 40rpx 60rpx 110rpx;
}

.head {
  position: relative;
  margin: 0 auto 70rpx;
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #EBEBEB;
  border-radius: 50%;
}

.head .icon-head {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.head .icon-edit {
  position: absolute;
  right: 0;
  bottom: 0;
  display: block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}

.title {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #101010;
  line-height: 36rpx;
}

.box {
  margin: 0 0 70rpx;
  padding: 0 30rpx;
  width: 630rpx;
  height: 90rpx;
  border-radius: 30rpx;
  border: 1px solid #999999;
}

.box .input {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx;
}

.box .icon-arrow {
  display: block;
  width: 24rpx;
  height: 24rpx;
}

.gender {
  width: 190rpx;
  height: 70rpx;
  background: #F6F7F9;
  border-radius: 35rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 30rpx;
}

.gender .icon-gender {
  margin-right: 20rpx;
  display: block;
  width: 30rpx;
  height: 30rpx;
}

.gender.active {
  background: #9EDEDE;
}

.icon-add {
  display: block;
  width: 38rpx;
  height: 38rpx;
}

.hobby {
  margin: 0 20rpx 30rpx 0;
  width: 158rpx;
  height: 65rpx;
  border-radius: 33rpx;
  color: #666666;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  text-align: center;
  border: 1px solid #999999;
  line-height: 62rpx;
}

.hobby.active {
  background: #9EDEDE;
  color: #333333;
  border: 0;
  line-height: 65rpx;
}

.icon-check {
  margin-right: 15rpx;
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}

.hobby-pop {
  width: 750rpx;
  background: #FFFFFF;
  border-radius: 20rpx 20rpx 0 0;
}

.hobby-pop .row {
  padding: 0 40rpx;
  height: 108rpx;
  border-bottom: 1px solid #F0F0F0;
}

.hobby-list {
  max-height: 540rpx;
  overflow-y: scroll;
}

.renzheng {
  width: 152rpx;
  height: 40rpx;
  background: linear-gradient(270deg, #E8C082 0%, #E8B54B 100%);
  border-radius: 6rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FFF;
  line-height: 24rpx;
}

.renzheng image {
  margin-right: 10rpx;
  display: block;
  width: 22rpx;
  height: 22rpx;
}

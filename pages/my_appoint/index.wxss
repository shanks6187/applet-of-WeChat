/* pages/my_appoint/index.wxss */
.page-head {
  padding: 30rpx;
  background: #FAFAFA;
}

.tab {
  height: 70rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #898989;
  line-height: 70rpx;
}

.tab.active {
  padding: 0 30rpx;
  background: rgba(255, 140, 54, 0.15);
  border-radius: 10rpx;
  color: #000000;
}

.container {
  padding: 130rpx 30rpx 40rpx;
  background: #FAFAFA;
}

.g-card{
  margin: 0 0 30rpx;
}

.modal-mask {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-dialog {
  width: 60%;
  height: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: fixed;
  margin: 0 auto;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
}

.modal-dialog .title{
  color: #121118;
}

.modal-dialog .toast{
  color: #aaa;
}
